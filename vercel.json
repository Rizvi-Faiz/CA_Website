{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "build" }
    },
    {
      "src": "api/news.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["api/**", ".env"] }
    }
  ],
  "functions": {
    "api/news.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/news/:path*",
      "destination": "/api/news"
    },
    {
      "source": "/api/news",
      "destination": "/api/news"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
