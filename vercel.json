{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "build" }
    },
    {
      "src": "api/news.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["api/**", ".env"] }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/news.js"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
